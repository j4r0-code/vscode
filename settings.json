{
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontSize": 13,
  "editor.fastScrollSensitivity": 5,
  "editor.smoothScrolling": false,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  // menu bar
  // "window.menuBarVisibility": "compact",
  // minimap
  // "editor.minimap.autohide": true,
  "editor.minimap.enabled": false,
  // "editor.minimap.renderCharacters": false,
  // "editor.minimap.scale": 1,
  // "editor.minimap.showSlider": "mouseover",
  // "editor.minimap.side": "right",
  // "editor.cursorBlinking": "solid",
  // cursor style
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.cursorSurroundingLines": 10,
  "editor.cursorSurroundingLinesStyle": "default",
  "workbench.colorCustomizations": {
    "editorCursor.background": "#ff930f",
    "editorCursor.foreground": "#ff930f",
    "terminal.background": "#131212",
  },
  // bracket setting
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.indentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  //hovering dealy
  "editor.hover.delay": 300,
  "workbench.hover.delay": 1,
  // highlits occurance
  "editor.occurrencesHighlight": true,
  // markdown settings
  "MarkdownPaste.nameBase": "image",
  "MarkdownPaste.nameSuffix": "_${datetime|MM-DD-yyyy-HH-mm-ss}",
  "MarkdownPaste.path": "${fileWorkspaceFolder}/img",
  "MarkdownPaste.namePrefix": "evidence_",
  "git.openRepositoryInParentFolders": "never",
  "workbench.colorTheme": "Copilot Theme",
  "workbench.iconTheme": "file-icons",
  "editor.inlayHints.fontFamily": "'JetBrains Mono'",
  "window.zoomLevel": 1,
  "diffEditor.maxComputationTime": 0,
  "terminal.integrated.fontFamily": "JetBrains Mono NL, Consolas, 'Courier New', monospace",
  
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "javascript": true,
    "python": true
    "powershell": true,
    "csharp": true,
    "typescript": true,
    "go": true,
    "java": true,
    "ruby": true,
    "php": true,
    "css": true,
    "html": true,
    "json": true,
    "sql": true,
    "rust": true,
    "C": true,
    "C++": true,
    "batch": true,
    "bash": true,
    "shellscript": true,
    "dockerfile": true,
    "perl": true,
    "swift": true,
  },
}